<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="160dp"
            android:textSize="100dp"
            android:background="#eee"
            android:textColor="#000"
            android:gravity="right|bottom"
            />
        <!--android:text="0"-->
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--   <TableLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
               <Button>

               </Button>
               >
           </TableLayout>-->
        <Button
            android:layout_marginTop="115sp"
            android:id="@+id/btnBackspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="175dp"
            android:layout_marginLeft="14dp"
            android:text="backspace"
            android:textColor="#ffffffff"
            android:background="@drawable/button"
            />
        <Button
            android:layout_marginTop="115sp"
            android:id="@+id/btnCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="175dp"
            android:text="CE"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:width="75dp"
            android:text="7"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:width="75dp"
            android:text="8"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="9"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="÷"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:width="75dp"
            android:text="4"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="5"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="6"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="x"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:width="75dp"
            android:text="1"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="2"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="3"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="+"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:width="75dp"
            android:text="0"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="C"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnEqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="Equ"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="75dp"
            android:text="—"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            />
    </LinearLayout>
</LinearLayout>
